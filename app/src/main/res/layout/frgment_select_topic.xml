<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical">

    <TextView
        android:id="@+id/fragment_select_topic_tv_start_chat"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_40dp"
        android:text="@string/label_fragment_select_receiver_gender_start_chat"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/shape_circle_orange"
        android:layout_marginBottom="@dimen/forth_margin"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/fragment_select_topic_tv_select_topic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_40dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/shape_circle_green"
        android:text="@string/label_fragment_select_receiver_gender_select_topic"
        android:textStyle="bold"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/fragment_select_topic_ll_topic_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="96dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/fragment_select_topic_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/topic"/>
    </LinearLayout>

</LinearLayout>